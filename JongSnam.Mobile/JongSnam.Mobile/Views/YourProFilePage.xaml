<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongSnam.Mobile.Views.YourProFilePage"
             Title="โปรไฟล์">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="บันทึก" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#f5f5f3" Padding="15">
                <StackLayout>
                    <Image WidthRequest="150" HeightRequest="150" Source="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"/>
                    <Label Text="Change..." HorizontalOptions="Center" />
                </StackLayout>
                <Grid>
                    <Editor Placeholder="FirstName" Grid.Column="0"/>
                    <Editor Placeholder="LastName" Grid.Column="1"/>
                </Grid>
                <Entry Placeholder="Email" PlaceholderColor="Gray" />
                <Entry Placeholder="Phone" MaxLength="10" PlaceholderColor="Gray" />
                <Editor Placeholder="Address" HeightRequest="80" />
                <Button Text="ChangePassword" Command="{Binding ChangePasswordCommand}"
                VerticalOptions="CenterAndExpand"
                    BackgroundColor="RoyalBlue"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>