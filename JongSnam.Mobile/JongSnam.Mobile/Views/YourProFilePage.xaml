<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongSnam.Mobile.Views.YourProFilePage"
             xmlns:local="clr-namespace:JongSnam.Mobile.ViewModels"
             xmlns:model="clr-namespace:JongSnamService.Models"
             BindingContext="{Binding YourProFileViewModel}"
             Title="โปรไฟล์">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="บันทึก" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>

    <StackLayout BackgroundColor="#f5f5f3" Padding="15">
        <StackLayout>
            <Image WidthRequest="150" HeightRequest="150" Source="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"/>
            <Label Text="{Binding FirstName}" HorizontalOptions="Center" />
        </StackLayout>
        <Grid>
            <Editor Text="{Binding FirstName }" Grid.Column="0"/>
            <Editor Text="{Binding LastName }" Grid.Column="1"/>
        </Grid>
        <Entry Placeholder="" Text="{Binding FirstName }" PlaceholderColor="Gray" />
        <Entry Placeholder="Phone" Text="{Binding Phone }" MaxLength="10" PlaceholderColor="Gray" />
        <Editor Placeholder="Address" HeightRequest="80" Text="{Binding Address }" />
    </StackLayout>
</ContentPage>