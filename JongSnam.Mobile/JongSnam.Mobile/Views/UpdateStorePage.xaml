<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongSnam.Mobile.Views.UpdateStorePage"
             Title="แก้ไขร้าน">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="บันทึก" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
            <ScrollView>
            <StackLayout BackgroundColor="#f5f5f3" Padding="20">

                <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               AbsoluteLayout.LayoutFlags="All"
                               AbsoluteLayout.LayoutBounds=".5,.5,.1,.1"/>
                <StackLayout>
                    <Image Grid.RowSpan="5" HeightRequest="200" WidthRequest="180" Source="{Binding ImageProfile}" />
                    <ImageButton Margin="3"
                             BackgroundColor="#f5f5f3"
                            HeightRequest="56" 
                             WidthRequest="56"
                            Padding="2"
                            Source="https://cdn0.iconfinder.com/data/icons/communication-2-5/98/59-512.png"
                            Command="{Binding UploadImageCommand}">
                    </ImageButton>
                </StackLayout>
                <Label Text="ชื่อร้าน"/>
                <Entry Text="{Binding Name}" PlaceholderColor="Gray" />
                <Label Text="ที่อยู่"/>
                <Entry Text="{Binding Address}" PlaceholderColor="Gray" />
                <Label Text="ตำบล"/>
                <Picker x:Name="picker" Title="{Binding SubDistrict }"
                HorizontalOptions="FillAndExpand">
                    <Picker.Items>
                        <x:String>เหมาะสำหรับ 5คน</x:String>
                        <x:String>เหมาะสำหรับ 7คน</x:String>
                        <x:String>เหมาะสำหรับ 11คน</x:String>
                    </Picker.Items>
                </Picker>
                <Label Text="อำเภอ"/>
                <Picker x:Name="Districts" Title="{Binding District }"
                HorizontalOptions="FillAndExpand">
                    <Picker.Items>
                        <x:String>เปิดบริการ</x:String>
                        <x:String>ปิดบริการ</x:String>
                    </Picker.Items>
                </Picker>
                <Label Text="จังหวัด"/>
                <Picker x:Name="Province" Title="{Binding Province }"
                HorizontalOptions="FillAndExpand">
                    <Picker.Items>
                        <x:String>เปิดยริก่าร</x:String>
                        <x:String>ปิดบริกร</x:String>
                    </Picker.Items>
                </Picker>

                <Label Text="เบอร์โทร"/>
                <Entry Text="{Binding ContactMobile }" PlaceholderColor="Gray" />
                
                <Grid>
                    <Entry Grid.Column="0" Text="{Binding Latitude}"
                   Keyboard="Numeric"
                   IsEnabled="false" />

                    <Entry Grid.Column="1" Text="{Binding Longtitude}"
                   Keyboard="Numeric"
                   IsEnabled="false" />
                </Grid>
                <Label Text="เวลาทำการ"/>
                <Entry Text="{Binding OfficeHours}" PlaceholderColor="Gray" />
                <Label Text="สถานนะของสนาม"/>
                <Picker x:Name="Status" Title="สถานนะของสนาม"
            HorizontalOptions="FillAndExpand">
                    <Picker.Items>
                        <x:String>เปิดบริการ</x:String>
                        <x:String>ปิดบริการ</x:String>
                    </Picker.Items>
                </Picker>
                <Editor Text="{Binding Rules}" HeightRequest="80" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>