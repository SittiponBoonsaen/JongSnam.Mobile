<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongSnam.Mobile.Views.CommentPage"
             Shell.PresentationMode="ModalAnimated">
    
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="คอมเม้น" FontSize="Medium" />
            <Entry Text="{Binding Message, Mode=TwoWay}" Placeholder="แสดงความคิดเห็น..." FontSize="Medium" />
            <Label Text="คะแนนรีวิว" FontSize="Medium" />
            <Picker Title="ขนาดสนาม"
                    ItemsSource="{Binding Rattings}"
                    SelectedItem="{Binding Ratting}"
                    ItemDisplayBinding="{Binding Name}"/>

            <StackLayout Orientation="Horizontal">
                <Button Text="แสดงความคิดเห็น..." Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="ยกเลิก" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>