<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongSnam.Mobile.Views.YourFieldPage"
             xmlns:local="clr-namespace:JongSnam.Mobile.ViewModels"
             xmlns:model="clr-namespace:JongSnamService.Models"
             x:Name="ThisPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="เพิ่ม" Command="{Binding AddFieldCommand}"/>
    </ContentPage.ToolbarItems>

    <RefreshView x:DataType="local:YourFieldViewModel" Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <CollectionView x:Name="ItemsListView"
                        ItemsSource="{Binding Items}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="0" x:DataType="model:FieldDto">
                        <Grid Margin="5,7,5,7" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>

                            <Image Source="https://static.vecteezy.com/system/resources/thumbnails/000/522/621/small/kflj_bbzy_140326.jpg" 
                                   Grid.Column="0" Grid.RowSpan="2"/>

                            <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="1"  Grid.RowSpan="2" VerticalOptions="Center" HorizontalOptions="Center"
                               Style="{DynamicResource ListItemTextStyle}" 
                               FontSize="13"/>

                            <Button Text="ดู" Grid.Column="2" Grid.RowSpan="2" HorizontalOptions="End" FontSize="13"
                                    Command="{Binding BindingContext.YourFieldCommand, Source={x:Reference ThisPage}}"
                                    CommandParameter="{Binding .}"/>

                            <Button Text="แก้ไข" Grid.Column="3" Grid.RowSpan="2" 
                                    HorizontalOptions="End" FontSize="13" BackgroundColor="ForestGreen"
                                    Command="{Binding BindingContext.UpdateFieldCommand, Source={x:Reference ThisPage}}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="Gray"></BoxView>
                    </StackLayout>


                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>