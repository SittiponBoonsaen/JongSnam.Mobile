<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JongSnam.Mobile.Views.RegisterPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ยืนยัน" Command="{Binding RegisterCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#f5f5f3" Padding="20">
            <Label Text="สมัครสมาชิก" FontSize="Title" HorizontalOptions="Center" />

                <Label Text="อีเมล"/>
            <Entry Placeholder="" Text="{Binding Email}" PlaceholderColor="Gray" />
                <Label Text="รหัสผ่าน"/>
            <Entry Placeholder="" IsPassword="true" Text="{Binding Password}" PlaceholderColor="Gray" />
                <Label Text="ยืนยันรหัสผ่าน"/>
             <Entry Placeholder="" IsPassword="true" Text="{Binding ConfrimPassword}" PlaceholderColor="Gray" />
                <Grid RowSpacing="-15" >
                    <Grid.RowDefinitions >
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="ชื่อ" Grid.Column="0" Grid.Row="0"/>
                    <Editor Placeholder="" Text="{Binding FirstName}" Grid.Column="0" Grid.Row="1"/>
                    <Label Text="นามสกุล" Grid.Column="1" Grid.Row="0"/>
                    <Editor Placeholder="" Text="{Binding LastName}" Grid.Column="1" Grid.Row="1"/>
            </Grid>
                <Label Text="เบอร์โทรศัพท์"/>
                <Entry Placeholder="" Text="{Binding Phone}" Keyboard="Numeric" MaxLength="10" PlaceholderColor="Gray" />
                <Label Text="ที่อยู่"/>
            <Editor Placeholder="" Text="{Binding Address}" HeightRequest="70" />

                <Picker Title="เลือกสถานะของสมาชิก" FontSize="15"
                    ItemsSource="{Binding UserTypes}"
                    SelectedItem="{Binding UserType}"
                    ItemDisplayBinding="{Binding Name}"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>